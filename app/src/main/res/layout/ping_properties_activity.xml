<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay_ping_prop_root_lay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_inp_lay_prop_timeout"
                    android:hint="Timeout"
                    android:textColorHint="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_prop_timeout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="6"
                        android:inputType="number"
                        android:textColor="#FFFFFF"
                        android:textColorHint="@color/text_color" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_inp_lay_prop_ttl"
                    android:hint="TTL (ms)"
                    android:textColorHint="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_prop_ttl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="6"
                        android:inputType="number"
                        android:textColor="#FFFFFF"
                        android:textColorHint="@color/text_color" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/text_color"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_inp_lay_prop_packet_size"
                    android:hint="Packet Size (bytes)"
                    android:textColorHint="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_prop_packet_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="6"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:textColorHint="@color/text_color" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_inp_lay_prop_tries"
                    android:hint="Tries"
                    android:textColorHint="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_prop_tries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="6"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:textColorHint="@color/text_color" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ping_statistic_background"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_inp_lay_prop_delay"
                    android:hint="Delay (ms)"
                    android:textColorHint="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_prop_delay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="6"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:textColorHint="@color/text_color" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vibro_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="20"
                    android:text="Vibrate: "
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <ToggleButton
                    android:id="@+id/tb_is_vibrate"
                    android:layout_weight="80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="On"
                    android:textOff="Off"
                    android:background="@drawable/toggle_button_selector"
                    android:text="ToggleButton" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_lay_vibro_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                <LinearLayout
                    android:id="@+id/expandable_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/rg_vibro_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <RadioButton
                            android:id="@+id/rb_vibro_on_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/vibro_mode_selector"
                            android:paddingLeft="6dp"
                            android:text="Vibrate on Success"
                            android:textColor="@color/text_color" />

                        <RadioButton
                            android:id="@+id/rb_vibro_on_fail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/vibro_mode_selector"
                            android:paddingLeft="6dp"
                            android:text="Vibrate on Fail"
                            android:textColor="@color/text_color" />
                    </RadioGroup>
                </LinearLayout>
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_clear_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ping_settings_buttons_selector"
                    android:text="Clear Values"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_set_default_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ping_settings_buttons_selector"
                    android:text="Set Default Values"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_save_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ping_settings_buttons_selector"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>